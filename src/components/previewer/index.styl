@import '../../mixin'

.previewer
  width 100%
  height 100%
  background #847562
  position relative
  padding 0 0 58px
  $display-flex(column)

  &--converting
    &:after
      content ''
      display block
      width 100%
      height 100%
      background white
      opacity 0.5
      position absolute
      top 0
      left 0
      z-index 5
  
  &--has-imgur-link
    padding 0 0 102px
  
  &__wrap
    $display-flex(row, center, start)
    max-height 100%
    width 100%
    overflow-y auto  
    overflow-x hidden

  &__loader
    position absolute
    z-index 10
    top calc( 50% - 20px )
    left calc( 50% - 20px )
  
  &__actions
    position absolute
    width 100%;
    left 0
    bottom 0
    background #f2f0d9
    $display-flex()
  
  &__actions-wrap
    width 100%
    max-width 340px
    padding 0 4px
    flex-wrap wrap
    $display-flex()
    
  &__actions-row 
    width 100%
    padding 4px 0
    $display-flex()
  
  &__actions-text-field
    flex 1 0 0

  &__btn
    flex 1 0 0
  
  &__btn-wrap
    $display-flex(column)