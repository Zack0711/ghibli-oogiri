@import '../../mixin'

.gallery
  width 100%
  height 100%
  background white
  padding 52px 0
  position relative
  $display-flex()
  
  &__header
    width 100%
    padding 8px
    background #eee
    position absolute
    top 0
    left 0
    $display-flex()
  
  &__title
    flex 1 0 0
  
  &__wrap
    width 100%
    height 100%
    overflow-y auto
    overflow-x hidden    
    $display-flex(column, start)
  
  &__detail-wrap
    $display-flex(column, start)
    max-height calc(100vh - 210px)
    overflow-y auto
    overflow-x hidden

  &__thumb
    flex-wrap wrap
    $display-flex(row, start)
  
  &__thumb-wrap
    flex-basis 33.3%
    padding 1px
    $display-flex()
    
    &--list
      flex-basis 100%
    
  &__thumb-img
    width 100%
    height 100%
    border 2px solid transparent

    &--active
      border-color red
  
  &__actions
    width 100%
    padding 8px
    background #eee
    position absolute
    bottom 0
    left 0
    $display-flex()
    