@import '../../../mixin'

.text-input
  $display-flex()
  width 100%
  height 100%
  
  &__title
    padding 8px 0
  
  &__content
    $display-flex(column)
    padding 8px
    background white
  
  &__actions
    $display-flex()
    width 100%
    padding 8px 0
  
  &__action-btn
    flex-basis 50%
  
  &__warning
    padding 8px 0
    font-size 10px
    color red
