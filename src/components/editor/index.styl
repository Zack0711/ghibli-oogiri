@import '../../mixin'

.editor
  width 100vw
  height 100vh
  position fixed
  top 0
  left 0
  overflow hidden
  $display-flex()
  
  &__wrap
    $display-flex(column)
    width 100%
    height 100%
    padding 0 0 52px
    flex-wrap wrap
    background #333
    position relative
    max-width 960px
    
    &--text-edit-mode
      padding 0 0 140px

    &--banner-edit-mode
      padding 0 0 96px
  
  &__svg-wrap
    $display-flex(row, center, start)
    width 100%
    max-height 100%
    overflow-y auto
  
  &__actions
    $display-flex()
    width 100%
    position absolute
    bottom 0
    left 0
    background #222
  
  &__row
    padding 8px 0
    $display-flex()
  
  &__btn
    color white
 